@{
    ViewData["Title"] = "Xác minh OTP";
}
<head>
    <link rel="stylesheet" href="~/css/Account/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/iziToast.css" />
</head>

<body>
    <div class="login-wrapper">
        <div class="login-illustration">
            <img src="~/img/login.jpg" alt="OTP Illustration" />
        </div>

        <div class="login-form-container">
            <h1 class="login-title">XÁC MINH MÃ OTP</h1>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <form method="post" asp-action="VerifyOtp" class="login-form" id="verifyOtpForm">
                <input type="hidden" name="email" value="@ViewBag.Email" />

                <div class="form-group">
                    <label for="otp">Nhập mã OTP</label>
                    <input type="text" class="form-control" id="otp" name="otp" required
                        placeholder="Nhập mã OTP gồm 6 chữ số" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                </div>

                <p class="text-center mt-3" style="font-style: italic;">
                    <a asp-action="ForgotPassword">Gửi lại mã OTP?</a>
                </p>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#verifyOtpForm").submit(function (event) {
                event.preventDefault();

                var otp = $("#otp").val();
                var email = $("input[name='email']").val();

                if (!otp) {
                    iziToast.error({
                        title: "Lỗi!",
                        message: "Vui lòng nhập mã OTP.",
                        position: "topRight",
                        timeout: 1000
                    });
                    return;
                }

                $.ajax({
                    url: "@Url.Action("VerifyOtp", "Account")",
                    type: "POST",
                    data: { email: email, otp: otp },
                    success: function (response) {
                        if (response.success) {
                            iziToast.success({
                                title: "Thành công!",
                                message: response.message,
                                position: "topRight",
                                timeout: 1000,
                                onClosing: function () {
                                    window.location.href = response.redirectUrl;
                                }
                            });
                        } else {
                            iziToast.error({
                                title: "Lỗi!",
                                message: response.message,
                                position: "topRight",
                                timeout: 1000
                            });
                        }
                    },
                    error: function () {
                        iziToast.error({
                            title: "Lỗi hệ thống!",
                            message: "Có lỗi xảy ra, vui lòng thử lại.",
                            position: "topRight",
                            timeout: 1000
                        });
                    }
                });
            });
        });
    </script>
}
