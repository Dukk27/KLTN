            var errorMessage = '@Html.Raw(ViewBag.Error)';
            if (errorMessage) {
                iziToast.error({
                    title: 'Lỗi đăng nhập',
                    message: errorMessage,
                    position: 'topRight',
                    timeout: 1500
                });
