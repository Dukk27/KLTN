@{
    ViewData["Title"] = "Quên Mật Khẩu";
}
<head>
    <link rel="stylesheet" href="~/css/Account/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/iziToast.css" />
</head>

<body>
    <div class="login-wrapper">
        <div class="login-illustration">
            <img src="~/img/login.jpg" alt="Forgot Password Illustration" />
        </div>

        <div class="login-form-container">
            <h1 class="login-title">QUÊN MẬT KHẨU</h1>

            <form method="post" asp-action="ForgotPassword" id="forgotPasswordForm" class="login-form">
                <div class="form-group">
                    <label for="email">Nhập Email</label>
                    <input type="email" class="form-control" id="email" name="email" required placeholder="Nhập email của bạn" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Gửi mã OTP</button>
                </div>

                <p class="text-center mt-3" style="font-style: italic;">
                    <a asp-action="Login">Quay lại đăng nhập</a>
                </p>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#forgotPasswordForm").submit(function (event) {
                event.preventDefault();

                var email = $("#email").val();
                if (!email) {
                    iziToast.error({
                        title: "Lỗi!",
                        message: "Vui lòng nhập email.",
                        position: "topRight",
                        timeout: 1500
                    });
                    return;
                }

                $.ajax({
                    url: "@Url.Action("ForgotPassword", "Account")",
                    type: "POST",
                    data: { email: email },
                    success: function (response) {
                        if (response.success) {
                            iziToast.success({
                                title: "Thành công!",
                                message: response.message,
                                position: "topRight",
                                timeout: 1000,
                                onClosing: function () {
                                    window.location.href = "@Url.Action("VerifyOtp", "Account")" + "?email=" + email;
                                }
                            });
                        } else {
                            iziToast.error({
                                title: "Lỗi!",
                                message: response.message,
                                position: "topRight",
                                timeout: 1000
                            });
                        }
                    },
                    error: function () {
                        iziToast.error({
                            title: "Lỗi hệ thống!",
                            message: "Đã có lỗi xảy ra, vui lòng thử lại.",
                            position: "topRight",
                            timeout: 1000
                        });
                    }
                });
            });
        });
    </script>
}
