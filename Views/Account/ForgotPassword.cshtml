@{
    ViewData["Title"] = "Quên Mật Khẩu";
}

<link rel="stylesheet" href="~/css/iziToast.css">

<style>
    .container {
        margin-bottom: 50px;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 450px; padding: 20px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Quên Mật Khẩu</h2>

            <form method="post" asp-action="ForgotPassword" id="forgotPasswordForm">
                <div class="form-group mb-3">
                    <label for="email">Nhập Email</label>
                    <input type="email" class="form-control" id="email" name="email" required
                        placeholder="Nhập email của bạn" />
                </div>
                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-primary" style="width: 250px;">Gửi mã OTP</button>
                </div>
            </form>

            <p class="text-center mt-3">
                <a asp-action="Login">Quay lại đăng nhập</a>
            </p>
        </div>
    </div>
</div>

<!-- Thêm iziToast -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#forgotPasswordForm").submit(function (event) {
            event.preventDefault();

            var email = $("#email").val();
            if (!email) {
                iziToast.error({
                    title: "Lỗi!",
                    message: "Vui lòng nhập email.",
                    position: "topRight",
                    color: "red",
                    timeout: 1500
                });
                return;
            }

            $.ajax({
                url: "@Url.Action("ForgotPassword", "Account")",
                type: "POST",
                data: { email: email },
                success: function (response) {
                    if (response.success) {
                        iziToast.success({
                            title: "Thành công!",
                            message: response.message,
                            position: "topRight",                            
                            timeout: 1000,
                            onClosing: function() {
                                window.location.href = "@Url.Action("VerifyOtp", "Account")" + "?email=" + email;
                            }
                        });
                    } else {
                        iziToast.error({
                            title: "Lỗi!",
                            message: response.message,
                            position: "topRight",
                            timeout: 1000
                        });
                    }
                },
                error: function () {
                    iziToast.error({
                        title: "Lỗi hệ thống!",
                        message: "Đã có lỗi xảy ra, vui lòng thử lại.",
                        position: "topRight",
                        timeout: 1000
                    });
                }
            });
        });
    });
</script>



