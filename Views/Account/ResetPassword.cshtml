@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<link rel="stylesheet" href="~/css/iziToast.css">

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 450px; padding: 20px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Đặt lại mật khẩu</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }

            <form method="post" asp-action="ResetPassword">
                <input type="hidden" name="email" value="@ViewBag.Email" />

                <div class="form-group mb-3">
                    <label for="newPassword">Mật khẩu mới</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required
                        placeholder="Nhập mật khẩu mới" />
                </div>

                <div class="form-group mb-3">
                    <label for="confirmPassword">Xác nhận mật khẩu</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required
                        placeholder="Nhập lại mật khẩu" />
                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-primary" style="width: 250px;">Cập nhật mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Thêm iziToast -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("form").submit(function (event) {
            event.preventDefault(); // Ngăn form load lại trang

            var newPassword = $("#newPassword").val();
            var confirmPassword = $("#confirmPassword").val();
            var email = $("input[name='email']").val();

            if (!newPassword || !confirmPassword) {
                iziToast.error({
                    title: "Lỗi!",
                    message: "Vui lòng nhập đầy đủ thông tin.",
                    position: "topRight",
                    timeout: 1000
                });
                return;
            }

            if (newPassword !== confirmPassword) {
                iziToast.warning({
                    title: "Cảnh báo!",
                    message: "Mật khẩu xác nhận không khớp.",
                    position: "topRight",
                    timeout: 1000
                });
                return;
            }

            $.ajax({
                url: "@Url.Action("ResetPassword", "Account")",
                type: "POST",
                data: { email: email, newPassword: newPassword, confirmPassword: confirmPassword },
                success: function (response) {
                    if (response.success) {
                        iziToast.success({
                            title: "Thành công!",
                            message: response.message,
                            position: "topRight",
                            timeout: 1000,
                            onClosing: function() {
                                window.location.href = response.redirectUrl;
                            }
                        });
                    } else {
                        iziToast.error({
                            title: "Lỗi!",
                            message: response.message,
                            position: "topRight",
                            timeout: 1000
                        });
                    }
                },
                error: function () {
                    iziToast.error({
                        title: "Lỗi hệ thống!",
                        message: "Có lỗi xảy ra, vui lòng thử lại.",
                        position: "topRight",
                        timeout: 1000
                    });
                }
            });
        });
    });
</script>

<style>
    .container {
        margin-bottom: 50px;
    }
</style>