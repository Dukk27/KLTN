<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>



    <style>
        /* CSS cho header cố định */
        .navbar {
            background-color: #007bff;
            color: white;
            height: 65px;
            width: 100%;
            z-index: 1000;
            top: 0;
            position: fixed;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
        }

        .navbar .navbar-brand {
            font-weight: bold;
            color: white;
            font-size: 17px;
            margin: 0;
        }

        .navbar .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

        .navbar-nav {
            display: flex;
            align-items: center;
            margin: 0;
            gap: 10px;
        }

        .navbar .nav-link {
            color: white !important;
            font-size: 1rem;
            padding: 8px 12px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .navbar .nav-link:hover {}

        body {
            padding-top: 80px;
            padding-bottom: 40px;
        }


        /* Footer chính */
        .footer {
            color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            font-family: 'Arial', sans-serif;
        }

        /* Nội dung trong footer */
        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .footer p {
            margin: 0;
            font-size: 14px;
            line-height: 1.6;
            color: black;
        }

        .footer-links {
            margin-top: 20px;
        }

        .footer .footer-link {
            color: #17a2b8;
            text-decoration: none;
            font-weight: bold;
            padding: 5px 10px;
            transition: color 0.3s ease, text-decoration 0.3s ease;
        }

        .footer .footer-link:hover {
            color: #ffffff;
            text-decoration: underline;
        }
    </style>

</head>

<body>
    @{
        var userName = Context.Session.GetString("UserName");
    }

    @if (!(ViewData["Title"]?.ToString() == "" || ViewData["Title"]?.ToString() == ""))
    {
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="header">
                <a class="navbar-brand" href="@Url.Action("Index", User.IsInRole("Admin") ? "Admin" : "Home")">TIMTRODE</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @if (string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", User.IsInRole("Admin") ? "Admin" : "Home")">Trang
                                    Chủ</a>
                            </li>

                            <li class="nav-item">
                                <span class="nav-link">Xin chào, @userName!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="header">
        @RenderBody()
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    @* Render section Scripts only once *@
    @RenderSection("Scripts", required: false)

    @* Footer section 
    <footer class="footer text-muted">
        <div class="container">
            <div class="footer-content">
                <p>&copy; 2024 - Ngân hàng nhà trọ 
                </p>
            </div>
        </div>
    </footer> *@


</body>

</html>