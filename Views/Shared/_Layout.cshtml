        // Hàm chuẩn hóa tên (loại bỏ tiền tố phường, quận, thành phố,...)
        function normalizeName(name) {
            return name
                .toLowerCase()
                .replace(/^(phường|xã|thị trấn|quận|huyện|thành phố|tp\.?|tỉnh)\s*/gi, '')
                .trim();
        }

        function extractCoreAddress(fullAddress) {
            const parts = fullAddress.split(',').map(p => normalizeName(p.trim()));
            const len = parts.length;

            return {
                street: len >= 4 ? parts[len - 4] : null,   // phố/đường
                ward: len >= 3 ? parts[len - 3] : null,     // phường/xã
                district: len >= 2 ? parts[len - 2] : null, // quận/huyện
                province: len >= 1 ? parts[len - 1] : null  // tỉnh/thành
            };
        }

        function doSearchByAddress(selectedAddress) {
            const fullAddress = $('#searchAddressInput').val().trim();

            fetch(`https://rsapi.goong.io/Geocode?address=${encodeURIComponent(fullAddress)}&api_key=RJ9d6oO2TLx8s4Q8riMgne1hI905XhC89HxJ7fIy`)
                .then(res => res.json())
                .then(data => {
                    if (data.results && data.results.length > 0) {
                        const location = data.results[0].geometry.location;
                        const lat1 = location.lat;
                        const lng1 = location.lng;

                        mapmodal.flyTo({
                            center: [lng1, lat1],
                            zoom: 13, 
                            speed: 1.2,
                            curve: 1,
                            easing: t => t
                        });

                        const radius = parseFloat(document.getElementById('radiusSelector').value);
                        drawCircleAround(lat1, lng1, radius);

                        const nearby = allHouseData.filter(h => {
                            if (!h.Lat || !h.Lng) return false;
                            const dist = getDistanceFromLatLonInKm(lat1, lng1, h.Lat, h.Lng);
                            return dist <= radius;
                        });

                        currentSearchResults = nearby;
                        currentResultIndex = 0;
                        renderMarkers(currentSearchResults);

                        setTimeout(() => {
                            document.getElementById('searchResultsCount').textContent =
                                `Có ${nearby.length} phòng trọ trong bán kính ${radius}km quanh khu vực "${fullAddress}"`;

                        }, 0);
                    } else {
                        alert("Không tìm thấy tọa độ từ địa chỉ.");
                    }
                })
                .catch(err => {
                    console.error("Geocode error:", err);
                    alert("Lỗi khi tìm tọa độ từ địa chỉ.");
                });
        }

        function getDistanceFromLatLonInKm(lat1, lon1, lat2, lon2) {
            const R = 6371; // Bán kính Trái Đất (km)
            const dLat = deg2rad(lat2 - lat1);
            const dLon = deg2rad(lon2 - lon1);
            const a =
                Math.sin(dLat / 2) * Math.sin(dLat / 2) +
                Math.cos(deg2rad(lat1)) * Math.cos(deg2rad(lat2)) *
                Math.sin(dLon / 2) * Math.sin(dLon / 2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
            return R * c;
        }

        function deg2rad(deg) {
            return deg * (Math.PI / 180);
        }

       // Xử lý Enter trong input tìm kiếm
        document.getElementById('searchAddressInput').addEventListener('keydown', function (e) {
            if (e.key === 'Enter') {
                const query = this.value.trim();
                if (query === '') {
                    // Nếu không nhập gì -> hiển thị lại toàn bộ trọ
                    currentSearchResults = [];
                    currentResultIndex = 0;
                    renderMarkers(allHouseData);

                    // Xóa gợi ý
                    const suggestions = document.querySelectorAll('.autocomplete-suggestions');
                    suggestions.forEach(el => el.remove());

                    // Xóa đường tròn nếu có
                    if (circleLayerId) {
                        if (mapmodal.getLayer(circleLayerId)) mapmodal.removeLayer(circleLayerId);
                        if (mapmodal.getSource(circleLayerId)) mapmodal.removeSource(circleLayerId);
                        circleLayerId = null;
                    }
                }
            }
        });

        // Xóa gợi ý khi click ngoài #searchContainer
        document.addEventListener('click', function (e) {
            const searchContainer = document.getElementById('searchContainer');
            if (!searchContainer.contains(e.target)) {
                const suggestions = document.querySelectorAll('.autocomplete-suggestions');
                suggestions.forEach(el => el.remove());
            }
        });

        // Vẽ đường tròn bao quanh vị trí
        let circleLayerId = null;

        function drawCircleAround(lat, lng, radiusInKm) {
            if (circleLayerId) {
                if (mapmodal.getLayer(circleLayerId)) mapmodal.removeLayer(circleLayerId);
                if (mapmodal.getSource(circleLayerId)) mapmodal.removeSource(circleLayerId);
            }

            const points = 64;
            const coords = [];
            const R = 6371; // bán kính Trái đất

            for (let i = 0; i < points; i++) {
                const angle = (i * 360) / points;
                const dx = radiusInKm * Math.cos(angle * Math.PI / 180);
                const dy = radiusInKm * Math.sin(angle * Math.PI / 180);
                const newLat = lat + (dy / R) * (180 / Math.PI);
                const newLng = lng + (dx / R) * (180 / Math.PI) / Math.cos(lat * Math.PI / 180);
                coords.push([newLng, newLat]);
            }
            coords.push(coords[0]); // Đóng vòng tròn

            const circleGeoJSON = {
                type: 'Feature',
                geometry: {
                    type: 'Polygon',
                    coordinates: [coords]
                }
            };

            circleLayerId = 'circle-radius-3km';

            mapmodal.addSource(circleLayerId, {
                type: 'geojson',
                data: circleGeoJSON
            });

            mapmodal.addLayer({
                id: circleLayerId,
                type: 'fill',
                source: circleLayerId,
                layout: {},
                paint: {
                    'fill-color': '#00bcd4',
                    'fill-opacity': 0.2
                }
            });
        }

        // Xử lý thay đổi bán kính
        document.getElementById('radiusSelector').addEventListener('change', function () {
            if (selectedAddressText) {
                const selectedParts = extractCoreAddress(selectedAddressText);
                doSearchByAddress(selectedParts);
            }
        });
    </script>

