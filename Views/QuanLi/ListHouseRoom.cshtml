@model KLTN.Models.HomeViewModel

<head>
    <link rel="stylesheet" href="~/css/iziToast.css">
    <link rel="stylesheet" href="~/css/House/listhouse.css">
</head>

<body>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Danh Sách Bài Đăng Của @ViewBag.UserName</li>
        </ol>
    </nav> 

    <div class="container user-houses-page"> 
        <h2>Danh Sách Bài Đăng Của Người Dùng @ViewBag.UserName</h2>

        <form id="filterForm" class="row g-3 align-items-end mb-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Nhập tiêu đề, địa chỉ..." onkeyup="filterList()" />
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <select id="statusFilter" class="form-select" onchange="filterList()">
                    <option value="">-- Tất cả trạng thái --</option>
                    <option value="Pending">Chờ duyệt</option>
                    <option value="Approved,Active">Đã duyệt</option>
                    <option value="Hidden">Đã ẩn</option>
                    <option value="Rejected">Bị từ chối</option>
                    <option value="Expired">Hết hạn</option>
                </select>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <label for="startDate" class="form-label">Từ ngày</label>
                <input type="date" id="startDate" class="form-control" onchange="filterList()" />
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <label for="endDate" class="form-label">Đến ngày</label>
                <input type="date" id="endDate" class="form-control" onchange="filterList()" />
            </div>
        </form>

        @if (Model.Houses != null && Model.Houses.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle" id="housesTable">
                    <thead class="table-secondary">
                        <tr class="text-center">
                            <th>Tiêu đề bài đăng</th>
                            <th>Địa Chỉ</th>
                            <th>Giá</th>
                            <th>Diện Tích</th>
                            @if (Model.IsAdmin)
                            {
                                <th>Người Đăng</th>
                            }
                            <th>Trạng Thái</th>
                            <th>Ngày Đăng</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var house in Model.Houses)
                        {
                            <tr class="house-row"
                                data-status="@house.Status.ToString()"
                                data-name="@house.NameHouse.ToLower()"
                                data-address="@house.HouseDetails.FirstOrDefault()?.Address.ToLower()"
                                data-date="@house.HouseDetails.FirstOrDefault()?.TimePost.ToString("yyyy-MM-dd")">
                                <td>@house.NameHouse</td>
                                <td>@house.HouseDetails.FirstOrDefault()?.Address</td>
                                <td>
                                    @house.HouseDetails.FirstOrDefault()?.Price.ToString("#,0", new System.Globalization.CultureInfo("vi-VN")) VND
                                </td>
                                @if (Model.IsAdmin)
                                {
                                    <td>@house.IdUserNavigation.UserName</td>
                                }
                                <td>@house.HouseDetails.FirstOrDefault()?.DienTich m²</td>

                                <td>
                                    @if (house.Status == HouseStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                    }
                                    else if (house.Status == HouseStatus.Hidden && house.IsAutoHidden)
                                    {
                                        <span class="badge bg-danger">Ẩn do bị báo cáo, <br>yêu cầu chỉnh sửa</span>
                                    }
                                    else if (house.Status == HouseStatus.Hidden)
                                    {
                                        <span class="badge bg-secondary text-wrap" style="white-space: normal; max-width: 100%;">
                                            Đã ẩn
                                        </span>
                                    } 
                                    else if (house.Status == HouseStatus.Approved || house.Status == HouseStatus.Active || house.Status == HouseStatus.Hidden)
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (house.Status == HouseStatus.Rejected)
                                    {
                                        <span class="badge bg-danger">Bị từ chối.<br> Hãy xem lý do ở thông báo</span>
                                    }
                                    else if (house.Status == HouseStatus.Expired)
                                    {
                                        <span class="badge bg-warning">Yêu cầu cập nhật lại.<br> Bài đăng đã quá 30 ngày</span>
                                    }
                                </td>
                                <td>@house.HouseDetails.FirstOrDefault()?.TimePost.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-1">
                                        <button class="btn btn-sm btn-primary" onclick="viewDetail(@house.IdHouse, 'house')" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-warning" onclick="editItem(@house.IdHouse, 'house')" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="deleteHouse(@house.IdHouse)" title="Xoá">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>

                                        @if (house.Status == HouseStatus.Active || house.Status == HouseStatus.Approved)
                                        {
                                            <button class="btn btn-sm btn-secondary btn-hide" data-id="@house.IdHouse" title="Ẩn bài đăng">
                                                <i class="fas fa-eye-slash"></i>
                                            </button>
                                        }
                                        @if (house.Status == HouseStatus.Hidden && !house.IsAutoHidden)
                                        {
                                            <button class="btn btn-sm btn-success btn-show" data-id="@house.IdHouse" title="Hiện bài đăng">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">Hiện chưa có bài đăng nào.</div>
        }
    </div> 

    @section Scripts { 
        <script src="https://cdn.jsdelivr.net/npm/izitoast/dist/js/iziToast.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.min.css">
        <script src="~/js/House/listhouseroom.js"></script>
    }

    <script>
        function filterList() {
            var searchInput = document.getElementById('searchInput').value.toLowerCase();
            var statusFilter = document.getElementById('statusFilter').value.toLowerCase();
            var startDate = document.getElementById('startDate').value;
            var endDate = document.getElementById('endDate').value;

            var rows = document.querySelectorAll('#housesTable .house-row');

            rows.forEach(function (row) {
                var houseName = row.getAttribute('data-name');
                var houseAddress = row.getAttribute('data-address');
                var houseStatus = row.getAttribute('data-status').toLowerCase();
                var postDate = row.getAttribute('data-date'); // yyyy-MM-dd

                var matchesSearch = houseName.includes(searchInput) || houseAddress.includes(searchInput);

                var matchesStatus = false;
                if (statusFilter === "approved,active") {
                    matchesStatus = (houseStatus === "approved" || houseStatus === "active");
                } else if (statusFilter) {
                    matchesStatus = houseStatus === statusFilter;
                } else {
                    matchesStatus = true;
                }

                // Lọc khoảng ngày
                var matchesDate = true;
                if (postDate) {
                    if (startDate && postDate < startDate) {
                        matchesDate = false;
                    }
                    if (endDate && postDate > endDate) {
                        matchesDate = false;
                    }
                }

                if (matchesSearch && matchesStatus && matchesDate) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        window.onload = filterList;
    </script>
</body>
