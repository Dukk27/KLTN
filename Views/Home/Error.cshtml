@{
    ViewData["Title"] = "Lỗi Hệ Thống";
}

<div class="error-container">
    <h1>⚠ Oops! Đã có lỗi xảy ra.</h1>
    <p>Chúng tôi xin lỗi vì sự bất tiện này.</p>
    <a href="/" class="btn btn-primary">Quay lại Trang Chủ</a>
</div>

<style>
    /* Trang lỗi - Error Page */
    .error-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 450px;
        text-align: center;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .error-container h1 {
        font-size: 40px;
        font-weight: bold;
    }

    .error-container p {
        color: #6c757d;
        /* Màu chữ xám */
        font-size: 24px;
        margin-bottom: 20px;
    }

    .error-container .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        transition: 0.3s;
    }

    .error-container .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }
</style>