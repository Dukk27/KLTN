@model KLTN.Models.HomeViewModel
@{
    ViewData["Title"] = "Trang Chủ";
    var userRole = ViewBag.UserRole;
    var userId = ViewBag.userId;
}

@if (TempData["SuccessMessage"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/izitoast/dist/js/iziToast.min.js"></script>
    <script>
        iziToast.success({
            title: 'Thành công!',
            message: '@TempData["SuccessMessage"]',
            position: 'topRight',
            timeout: 2000,
        });
    </script>
}   

<head>
    <!-- CSS và JavaScript -->
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <input type="hidden" id="userAuthenticated" value="@User.Identity.IsAuthenticated.ToString().ToLower()" />
    <script src="~/js/ListHouse.js" asp-append-version="true"></script>
    <!-- CSS của Slick Carousel -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"/>
    <!-- JS của Slick Carousel -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- IziToast -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/goong-js.js"></script>
    <link rel="stylesheet" href="~/css/goong-js.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid mt-2">
    </div>

    <div class="slider-container">
        <div><img src="/img/timtro.jpg" alt="Image 1"></div>
        <div><img src="/img/tro.jpg" alt="Image 2"></div>
        <div><img src="/img/tro1.jpg" alt="Image 3"></div>
    </div>

    <div class="hero-search-section" style="background-color: #2c4464; padding: 20px 0;">
        <div class="container">
            <div class="search-content" style="padding: 20px;">
                <p class="text-center text-white mb-4" style="font-size: 20px; font-weight: bold;">
                    CHÀO MỪNG QUÝ KHÁCH ĐẾN VỚI HỆ THỐNG TIMTRODE                
                </p>

                <form method="get" action="@Url.Action("Index", "Home")">
                <input type="hidden" name="scroll" value="true" />

                    <div class="row">
                        <!-- Thanh tìm kiếm bên trái --> 
                        <div class="col-md-6 mb-3 d-flex flex-column justify-content-start">
                            <label class="text-white mb-2 mt-1" style="font-size: 18px;">Tìm nhanh theo từ khoá</label> 
                            <div class="input-group search-group" style="max-width: 80%; max-height: 30px"> <!-- Giảm chiều rộng input -->
                                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo địa chỉ, tên bài đăng..." value="@ViewBag.Keyword" />
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Bộ lọc bên phải -->
                        <div class="col-md-6 mb-3 d-flex flex-column justify-content-start">
                            <label class="text-white mb-2 mt-1" style="font-size: 18px;">Hoặc lọc nhanh theo nhu cầu của bạn</label> 

                            <div class="row">
                                <!-- Tỉnh/Thành -->
                                <div class="col-md-4 mb-3">
                                    <select id="province" name="province" class="form-control" data-selected="@ViewBag.SelectedProvince"></select>
                                </div>

                                <!-- Quận/Huyện -->
                                <div class="col-md-4 mb-3">
                                    <select id="district" name="district" class="form-control" data-selected="@ViewBag.SelectedDistrict" disabled></select>
                                </div>

                                <!-- Phường/Xã -->
                                <div class="col-md-4 mb-3">
                                    <select id="ward" name="ward" class="form-control" data-selected="@ViewBag.SelectedWard" disabled></select>
                                </div>

                                <!-- Loại phòng -->
                                <div class="col-md-4 mb-3">
                                    <select class="form-control" name="roomType">
                                        <option value="" disabled selected>Loại phòng</option> <!-- Placeholder cho loại phòng -->
                                        <option value="">Tất cả</option>
                                        @foreach (var houseType in Model.HouseTypes)
                                        {
                                            var isSelected = ViewBag.RoomType == houseType.Name ? "selected" : "";
                                            @Html.Raw($"<option value='{houseType.Name}' {isSelected}>{houseType.Name}</option>")
                                        }
                                    </select>
                                </div>
 
                                <!-- Giá -->
                                <div class="col-md-4 mb-3">
                                    <select class="form-control" name="priceRange">
                                        <option value="" disabled selected>Khoảng giá</option> <!-- Placeholder cho khoảng giá -->
                                        <option value="">Tất cả</option>
                                        <option value="0-999999" selected="@(ViewBag.PriceRange == "0-999999")">Dưới 1 triệu/tháng</option>
                                        <option value="1000000-3000000" selected="@(ViewBag.PriceRange == "1000000-3000000")">1-3 triệu/tháng</option>
                                        <option value="3000000-5000000" selected="@(ViewBag.PriceRange == "3000000-5000000")">3-5 triệu/tháng</option>
                                        <option value="5000000-10000000" selected="@(ViewBag.PriceRange == "5000000-10000000")">5-10 triệu/tháng</option>
                                        <option value="10000000" selected="@(ViewBag.PriceRange == "10000000")">Trên 10 triệu/tháng</option>
                                    </select>
                                </div>

                                <!-- Sắp xếp -->
                                <div class="col-md-4 mb-3">
                                    <select class="form-control" name="sortBy">
                                        <option value="" disabled selected>Sắp xếp theo</option> <!-- Placeholder cho sắp xếp -->
                                        <option value="newest" selected="@(ViewBag.SortBy == "newest")">Mới nhất</option>
                                        <option value="oldest" selected="@(ViewBag.SortBy == "oldest")">Cũ nhất</option>
                                        <option value="priceLowHigh" selected="@(ViewBag.SortBy == "priceLowHigh")">Giá: Thấp đến Cao</option>
                                        <option value="priceHighLow" selected="@(ViewBag.SortBy == "priceHighLow")">Giá: Cao đến Thấp</option>
                                    </select>
                                </div>

                                <!-- Diện tích -->
                                <div class="col-md-4 mb-3 d-flex gap-4">
                                    <input type="number" name="minArea" class="form-control" placeholder="Diện tích từ (m²)" value="@ViewBag.MinArea" min="0" />
                                    <input type="number" name="maxArea" class="form-control" placeholder="Đến (m²)" value="@ViewBag.MaxArea" min="0" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nút -->
                    <div class="col-md-12 mt-3 d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-filter"><i class="fas fa-filter"></i> Áp dụng</button>
                        <a href="@Url.Action("Index", "Home")?scroll=true" class="btn btn-secondary d-flex align-items-center">
                            <i class="fas fa-times-circle mr-2"></i>&nbsp;Xóa bộ lọc
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Tạo Nhà Trọ -->
    <div class="modal fade" id="createHouseModal" tabindex="-1" role="dialog" aria-labelledby="createHouseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createHouseModalLabel">Tạo bài đăng nhà trọ mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0" id="createHouseModalBody">
                    <!-- Sử dụng iframe để cô lập CSS -->
                    <iframe id="createHouseIframe" style="width: 100%; height: 600px; border: none; "></iframe>
                    <!-- Loading spinner -->
                    <div id="loadingSpinner" class="text-center p-5">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p class="mt-2">Đang tải form...</p>
                    </div>
                </div>
            </div>
        </div> 
    </div>

    <!-- Danh sách nhà trọ -->
    <div id="house-list-section" class="container-fluid" style="padding-left: 30px; padding-right: 30px;">
        @if (Model.Houses == null || !Model.Houses.Any()) 
        {
            <div id="scroll-target">
                <div class="no-houses-container">
                    <h4 class="no-houses-message">Không tìm thấy nhà trọ phù hợp.</h4>
                    <p>Vui lòng thử lại với tìm kiếm khác hoặc quay lại trang chủ.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Quay Lại Trang Chủ
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="mt-4">
                <div class="row">
                    <div class="col-12">
                        <div id="scroll-target">
                            <h1 style="color: #1168AA; padding-bottom: 15px; font-size: 26px; font-weight: bold;">
                                Nơi ở dành cho bạn
                                @if (!string.IsNullOrEmpty(ViewBag.FilterDescription))
                                {
                                    <small style="font-size: 18px; color:rgb(33, 106, 223);"><br />@ViewBag.FilterDescription</small>
                                }
                            </h1>
                            <h5 class="text-muted">Tổng <span style="color: #28a745;">@Model.TotalPosts</span> kết quả.</h5>                 
                            <div class="row g-3">
                                @foreach (var house in Model.Houses)
                                {
                                    <div class="col-12 col-sm-6 col-lg-3">
                                        <a href="@Url.Action("Detail", "Home", new { id = house.IdHouse })" class="card-link-wrapper">
                                            <div class="card position-relative">
                                                @{
                                                    var firstImage = house.HouseDetails.FirstOrDefault()?.Image?
                                                        .Split(',', StringSplitOptions.RemoveEmptyEntries)
                                                        .FirstOrDefault();
                                                }
                                                <img src="@firstImage" class="card-img-top" alt="@house.NameHouse"
                                                    style="height: 200px; object-fit: cover;">
                                                <div class="card-body d-flex flex-column"> 
                                                    <h5 class="card-title"><strong>@house.NameHouse</strong></h5>
                                                    <p class="card-text"><strong>Người đăng:</strong> @house.IdUserNavigation.UserName</p>
                                                    <p class="card-text address-truncate"><strong>Địa chỉ:</strong> @house.HouseDetails.FirstOrDefault()?.Address</p>
                                                    <p class="card-text">
                                                        <strong>Giá nhà:</strong>
                                                        <span style="color: red;">
                                                            @house.HouseDetails.FirstOrDefault()?.Price.ToString("#,0", new System.Globalization.CultureInfo("vi-VN")) VND
                                                        </span>
                                                    </p> 
                                                    <p class="card-text">
                                                        <strong>Diện tích:</strong> @house.HouseDetails.FirstOrDefault()?.DienTich m²
                                                    </p>
                                                    <p class="card-text">
                                                        <strong>Loại nhà trọ:</strong> @house.HouseType?.Name
                                                    </p>
                                                    <p class="card-text">
                                                        <strong>Trạng thái:</strong>
                                                        @if (house.HouseDetails.FirstOrDefault()?.Status == "Chưa cho thuê")
                                                        {
                                                            <span class="status-not-rented">Chưa cho thuê</span>
                                                        }
                                                        else if (house.HouseDetails.FirstOrDefault()?.Status == "Đã cho thuê")
                                                        {
                                                            <span class="status-rented">Đã cho thuê</span>
                                                        }
                                                    </p>
                                                    @{
                                                        var timePost = house.HouseDetails.FirstOrDefault()?.TimePost;
                                                        var timeUpdate = house.HouseDetails.FirstOrDefault()?.TimeUpdate;

                                                        TimeSpan? timeSinceUpdate = timeUpdate.HasValue ? DateTime.Now - timeUpdate.Value : (TimeSpan?)null;

                                                        string timeAgoText = "";

                                                        if (timeSinceUpdate.HasValue)
                                                        {
                                                            if (timeSinceUpdate.Value.TotalSeconds < 60)
                                                            {
                                                                timeAgoText = $"Cập nhật {Math.Floor(timeSinceUpdate.Value.TotalSeconds)} giây trước";
                                                            }
                                                            else if (timeSinceUpdate.Value.TotalMinutes < 60)
                                                            {
                                                                timeAgoText = $"Cập nhật {Math.Floor(timeSinceUpdate.Value.TotalMinutes)} phút trước";
                                                            }
                                                            else if (timeSinceUpdate.Value.TotalHours < 24)
                                                            {
                                                                timeAgoText = $"Cập nhật {Math.Floor(timeSinceUpdate.Value.TotalHours)} giờ trước";
                                                            }
                                                            else
                                                            {
                                                                timeAgoText = $"Cập nhật {Math.Floor(timeSinceUpdate.Value.TotalDays)} ngày trước";
                                                            }
                                                        }
                                                    }

                                                    <p class="card-text">
                                                        <strong>Ngày đăng:</strong> @timePost?.ToString("dd/MM/yyyy")
                                                    </p>

                                                    @if (!string.IsNullOrEmpty(timeAgoText))
                                                    {
                                                        <p class="card-text text-muted" style="font-size: 0.9em;">
                                                            @timeAgoText
                                                        </p>
                                                    }

                                                    @* <a href="@Url.Action("Detail", "Home", new { id = house.IdHouse })" class="btn btn-view-detail mt-auto z-2 position-relative">
                                                        <i class="fas fa-eye icon"></i> Xem Chi Tiết
                                                    </a> *@
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Thanh phân trang -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            searchString = ViewBag.Keyword,
                            priceRange = ViewBag.PriceRange,
                            sortBy = ViewBag.SortBy,
                            roomType = ViewBag.RoomType,
                            amenities = ViewBag.SelectedAmenities,
                            minArea = ViewBag.MinArea,
                            maxArea = ViewBag.MaxArea,
                            pageNumber = Model.CurrentPage - 1,
                            scroll = "true"
                        })">«</a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            searchString = ViewBag.Keyword,
                            priceRange = ViewBag.PriceRange,
                            sortBy = ViewBag.SortBy,
                            roomType = ViewBag.RoomType,
                            amenities = ViewBag.SelectedAmenities,
                            minArea = ViewBag.MinArea,
                            maxArea = ViewBag.MaxArea,
                            pageNumber = i,
                            scroll = "true"
                        })">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            searchString = ViewBag.Keyword,
                            priceRange = ViewBag.PriceRange,
                            sortBy = ViewBag.SortBy,
                            roomType = ViewBag.RoomType,
                            amenities = ViewBag.SelectedAmenities,
                            minArea = ViewBag.MinArea,
                            maxArea = ViewBag.MaxArea,
                            pageNumber = Model.CurrentPage + 1,
                            scroll = "true"
                        })">»</a>
                    </li>
                }
            </ul>
        </nav>
    }
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentUserId = @ViewBag.CurrentUserId;

            if (!currentUserId) {
                console.log("[DEBUG] Không có user đăng nhập, không kết nối SignalR.");
                return;
            }

            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .configureLogging(signalR.LogLevel.Information)
                .build();

            connection.start().then(function () {
                console.log("[DEBUG] SignalR đã kết nối trên trang Home!");
                updateUnreadMessages(); // Lấy số tin nhắn chưa đọc khi trang load
            }).catch(function (err) {
                console.error("[ERROR] Không thể kết nối SignalR:", err.toString());
            });

            connection.on("ReceiveNotification", function (senderId, senderName, message) {
                if (senderId != currentUserId) {
                    var conversationId = senderId < currentUserId 
                        ? senderId + "-" + currentUserId 
                        : currentUserId + "-" + senderId;

                    iziToast.info({
                        title: `Tin nhắn mới từ ${senderName}`,
                        position: 'topRight',
                        timeout: 3000,
                        transitionIn: 'fadeIn',
                        transitionOut: 'fadeOut',
                        buttons: [
                            ['<button>Xem</button>', function (instance, toast) {
                                var chatUrl = `/Chat/ChatList`;
                                console.log("[DEBUG] Điều hướng đến:", chatUrl);
                                window.location.href = chatUrl;
                            }, true]
                        ]
                    });
                }
            });

            connection.on("UpdateUnreadMessages", function () {
                updateUnreadMessages();
            });

            // Hàm cập nhật số tin nhắn chưa đọc
            function updateUnreadMessages() {
                fetch("/Home/GetUnreadMessagesCount")
                    .then(response => response.json())
                    .then(data => {
                        var unreadBadge = document.getElementById("unreadMessagesBadge");
                        if (unreadBadge) {
                            if (data.count > 0) {
                                unreadBadge.textContent = data.count;
                                unreadBadge.style.display = "inline-block";
                            } else {
                                unreadBadge.style.display = "none";
                            }
                        }
                    })
                    .catch(error => console.error("[ERROR] Lỗi khi cập nhật số tin nhắn chưa đọc:", error));
            }

            // Hàm đánh dấu tin nhắn là đã đọc
            function markMessagesAsRead() {
                fetch("/Home/MarkMessagesAsRead", { method: "POST" })
                    .then(() => updateUnreadMessages())
                    .catch(error => console.error("[ERROR] Lỗi khi đánh dấu tin nhắn đã đọc:", error));
            }

            // Khi người dùng mở danh sách tin nhắn, đánh dấu tin nhắn là đã đọc
            var chatBoxContainer = document.getElementById("chatBoxContainer");
            if (chatBoxContainer) {
                chatBoxContainer.addEventListener("click", function () {
                    markMessagesAsRead();
                });
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            // Kiểm tra nút apply-location-filter
            const applyLocationFilterButton = document.getElementById("apply-location-filter");

            // Lắng nghe sự kiện click vào nút "Áp dụng bộ lọc"
            applyLocationFilterButton.addEventListener("click", function () {
                const province = document.getElementById("province").value;
                const district = document.getElementById("district").value;
                const ward = document.getElementById("ward").value;

                // Tạo query string
                const params = new URLSearchParams();

                if (province) params.append("province", province);
                if (district) params.append("district", district);
                if (ward) params.append("ward", ward);

                params.append("scroll", "true");

                // Redirect đến trang Index với các tham số lọc
                window.location.href = "/Home/Index?" + params.toString();
            });
        });
    </script>
</body>
